    "body-parser": "^1.17.2",
    "chalk": "^2.3.0",
    "compression": "^1.7.0",
    "connect-mongo": "^1.3.2",
    "cron": "^1.3.0",
    "debug": "^3.1.0",
    "dotenv": "^4.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.15.5",
    "express-flash": "^0.0.2",
    "express-session": "^1.15.5",
    "express-status-monitor": "^1.0.0",
    "express-validator": "^3.2.1",
    "lusca": "^1.5.1",
    "method-override": "^2.3.10",
    "moment": "^2.19.1",
    "mongodb": "^2.2.33",
    "mongoose": "^4.11.7",
    "morgan": "^1.8.2",
    "multer": "^1.3.0",
    "node-cmd": "^3.0.0",
    "node-cron": "^1.2.1",
    "node-fetch": "^1.7.3",
