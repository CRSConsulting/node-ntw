{
  "name": "ntw-project",
  "version": "4.3.0",
  "description": "NTW Project",
  "author": "CRS Consulting",
  "license": "MIT",
  "engines": {
    "node": "6.11.3",
    "npm": "5.4.2"
  },
  "scripts": {
    "start": "npm-run-all --parallel security-check open:server",
    "open:server": "pm2 start server.js -e err.log -o out.log",
    "security-check": "nsp check",
    "eslint": "eslint **/*.js"
  },
  "dependencies": {
