#userModal.fade.modal(tabindex='-1', role='dialog',aria-labelledby='userName',aria-hidden='true')
  .modal-dialog(role='document')
    .modal-content
      form#userForm.form-horizontal
        .modal-header
            h3 User
        .modal-body
            input(type='hidden', name='_csrf', value=_csrf)
            input#userId(type='hidden',name='id')
            .form-group
              label.col-sm-4.control-label(for='email') Email
              .col-sm-7
                input.form-control(type='email', name='email', id='email', placeholder='Email', autofocus, required)
            .form-group
              label.col-sm-4.control-label(for='password') Password
              .col-sm-7
                input.form-control(type='password', name='password', id='password', placeholder='Password' )
            .form-group
              label.col-sm-4.control-label(for='confirmPassword') Confirm Password
              .col-sm-7
                input.form-control(type='password', name='confirmPassword', id='confirmPassword', placeholder='Confirm Password')
            .form-group 
              .col-md-offset-1
                h4 Permissions
                label.checkbox-inline(for="perms[]")
                  input#permcalendar(type='checkbox', name='perms[]' value='calendar') 
                  | Calendar
                label.checkbox-inline(for="perms[]")
                  input#permreports(type='checkbox', name='perms[]', value='reports') 
                  | Reports
                label.checkbox-inline(for="perms[]")
                  input#permadmin(type='checkbox', name='perms[]', value='admin') 
                  | Admin
        .modal-footer
          .row
            .col-md-6(style='text-align:left')
              input.btn-delete.btn-danger.btn-primary.btn(type='button',section='user', value='Delete', style='display:none')
            .col-md-6
              input.btn-save.btn-success.btn-primary.btn(type='button',section='user', value='Save')
