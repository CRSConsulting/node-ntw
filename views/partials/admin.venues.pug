.row
  table#venueTable.table.table-hover.table-striped.table-bordered
    thead
      tr
        th Venue
        th Keyword
        th Upcoming Events
    tbody
      each venue in venues
        tr.edit-row(data-section='venue', data-id=venue._id)
          td #{venue.name}
          td #{venue.keyword} 
          td #{venue.drawings}
      tr.final-row
        td(colspan=3) 
          button#addVenue.btn-add.btn-primary.btn(type='button',data-toggle='modal', data-target='#venueModal') Add New Venue
form#adminForm
  .row.top-buffer-md
    .col-md-2
      label(for='startAmount') Entries To Start Raffle
        input#startAmount.form-control(name='startAmount', type='text', value= adminData.startAmount)
    .col-md-2
      label.float-right(for='duration') Raffle Duration (min.)
        input#duration.form-control(name='duration', type='text' value= adminData.duration)
  .row
    .col-md-4.top-buffer-sm.text-right
      input#adminSave.btn-success.btn-primary.btn(type='button', value='Save')